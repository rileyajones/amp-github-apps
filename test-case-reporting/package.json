{
  "name": "amp-test-case-reporting",
  "author": "The AMP HTML Authors",
  "version": "0.0.1",
  "private": true,
  "repository": "http://github.com/ampproject/amp-github-apps",
  "description": "An app that tracks the pass/fail status of tests run in Travis builds",
  "scripts": {
    "lint": "eslint **/*.ts",
    "fix": "eslint **/*.ts --fix",
    "lint-conflicts": "eslint --print-config app.ts | eslint-config-prettier-check",
    "build": "tsc",
    "build:watch": "tsc -w --p tsconfig.json",
    "setup-db": "node dist/src/setup_db.js",
    "generate-build-data": "npx ts-node src/generate_build_data.ts",
    "start": "node dist/index.js",
    "dev": "nodemon",
    "test": "jest --reporters=jest-silent-reporter",
    "test:watch": "jest --watch --notify --notifyMode=change",
    "deploy-tag": "git tag 'deploy-test-case-reporting-'`date -u '+%Y%m%d%H%M%S'`"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "body-parser": "1.19.0",
    "dotenv": "8.6.0",
    "express": "4.17.1",
    "http-status-codes": "2.1.4",
    "knex": "0.95.6",
    "md5": "2.3.0",
    "mustache": "4.2.0",
    "node-fetch": "2.6.1",
    "pg": "8.6.0"
  },
  "devDependencies": {
    "@types/express": "4.17.12",
    "@types/express-serve-static-core": "4.17.21",
    "@types/jest": "26.0.23",
    "@types/knex": "0.16.1",
    "@types/md5": "2.3.0",
    "@types/mustache": "4.1.1",
    "@types/node": "13.13.38",
    "@types/node-fetch": "2.5.10",
    "@types/supertest": "2.0.11",
    "@typescript-eslint/eslint-plugin": "2.34.0",
    "@typescript-eslint/parser": "4.26.0",
    "eslint": "7.27.0",
    "eslint-config-prettier": "7.2.0",
    "eslint-plugin-prettier": "3.4.0",
    "jest": "26.6.3",
    "jest-silent-reporter": "0.5.0",
    "nodemon": "2.0.7",
    "prettier": "2.3.0",
    "sqlite3": "5.0.2",
    "supertest": "6.1.3",
    "ts-jest": "26.5.6",
    "ts-node": "9.1.1",
    "typescript": "4.3.2"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "nodemonConfig": {
    "exec": "npm start",
    "watch": [
      ".env",
      "."
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "<rootDir>/test/jest-preload.ts"
    ],
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/"
    ]
  }
}
